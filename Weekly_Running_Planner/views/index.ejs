<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>

  <body>
    <h1 class="header">Weekly Running Planner</h1>

    <div class="nav">
      <ul>
          <li><a href="/">Routes</a></li>
          <li><a href="/running_plans">Weekly Running Plans</a></li>
      </ul>
    </div>

    <h3 class="sub-header">Routes</h3>
    <!--<form action="/routes/search" method="get" class="search">
      <input type="text" name="query">
      <button type="submit">Search for a Route</button>
    </form>-->

    <div class="displayed">
      <% for(var i =0; i < routes.length; i++) { %>
        <div class="displayed_result">
          <ul>
            <li class="displayed_result_info">Route ID: <%= routes[i].route_id %> <br/> Route name: <%= routes[i].route_name %> <br/> Distance: <%= routes[i].distance %> <br/> Elevation profile: <%= routes[i].elevation_profile %> <br/> Terrain: <%= routes[i].terrain %></li>
            <!--<li class="displayed_update">
              <form action="/routes/update" method="get">
                <input type="hidden" name="route_id" value="<%= routes[i].route_id %>"/>
                <button type="submit" style="background-color:rgba(255, 251, 0, 0.459)">Update Route</button>
              </form>
            </li>-->
            <li class="displayed_delete">
              <form action="/delete" method="get">
                <input type="hidden" name="route_id" value="<%= routes[i].route_id %>">
                <button type="submit" style="background-color:rgba(255, 30, 0, 0.459)">Delete Route</button>
              </form>
            </li>
          </ul>
        </div>
      <% } %>
    </div>

    <button class="add" style="background-color:rgba(5, 150, 0, 0.425)"><a href="/add">+ Add a Route</a></button>
  </body>
</html>
